# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index()
GET     /recommend/:profileName     controllers.MessageController.getRecomendations(profileName: String)
GET     /why/:profileName/:showID       controllers.MessageController.getWhy(profileName: String, showID: Int)
GET     /shows                      controllers.MessageController.list
GET     /show/:showid               controllers.MessageController.getShow(showid: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)