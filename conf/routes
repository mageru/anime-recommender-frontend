# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index()
GET     /message                    controllers.MessageController.feedTitle()
GET     /recommend                  controllers.MessageController.feedTitle()
GET     /shows                      controllers.MessageController.list
GET     /show/:showid               controllers.MessageController.getShow(showid: Int)
GET     /assets/javascripts/routes  controllers.MessageController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)